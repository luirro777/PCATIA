[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=lromano
Group=www-data
WorkingDirectory=/home/lromano/PCATIA
ExecStart=/home/lromano/entornos/pcatia/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --bind unix:/run/gunicorn.sock \
          pcatia.wsgi:application

[Install]
WantedBy=multi-user.target
